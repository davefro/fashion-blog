<!-- Featured Articles -->
<section class="bg-[#f6f4ef] py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center mb-12 flex-col md:flex-row text-center md:text-left gap-4">
      <div>
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Featured Articles</h2>
        <p class="text-gray-600 text-base">Curated picks to inspire your everyday style.</p>
      </div>
      <a href="/blog/" class="border border-green-800 text-green-800 px-6 py-2 rounded hover:bg-green-100 transition">
        View All Articles
      </a>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      {% set postslist = collections.posts | head(3) %}
      {% for post in postslist %}
        <article class="bg-white rounded-xl overflow-hidden shadow-lg">
          {% if post.data.image %}
            <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-56 object-cover" />
          {% else %}
            <div class="w-full h-56 bg-gray-200 flex items-center justify-center text-gray-500 text-sm italic">No image</div>
          {% endif %}
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ post.data.title }}</h3>
            <p class="text-gray-600 mb-4 text-sm leading-relaxed">
              {{ post.data.description | safe }}
            </p>
            <a href="{{ post.url }}" class="text-green-700 font-semibold hover:underline inline-flex items-center gap-1">
              Read More <span class="text-lg">→</span>
            </a>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

