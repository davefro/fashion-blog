<section class="bg-[#f6f4ef] dark:bg-gray-900 py-20 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4">

    
    <div class="scroll-reveal opacity-0 translate-y-8 transition-all duration-700 flex justify-between items-center mb-12 flex-col md:flex-row text-center md:text-left gap-4">
      <div>
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2 transition-colors duration-300">
