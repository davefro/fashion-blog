        <nav class="flex flex-col space-y-6 mt-16 px-6">
          <a href="/" class="hover:text-primary">Home</a>
          <a href="/blog/" class="hover:text-primary">Blog</a>
          <a href="/about/" class="hover:text-primary">About</a>
          <a href="/contact/" class="hover:text-primary">Contact</a>

          <!-- 💡 Mobile Dark Mode Toggle -->
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-700 dark:text-gray-200">Dark mode</span>
            <label class="relative inline-flex items-center cursor-pointer scale-90">
              <input type="checkbox" id="themeToggleMobile" class="sr-only peer">
              <div class="w-10 h-5 bg-gray-300 dark:bg-gray-700 rounded-full peer peer-checked:bg-indigo-500 transition-colors duration-300 ease-in-out"></div>
              <div class="absolute left-0.5 top-0.5 w-4 h-4 bg-white dark:bg-gray-300 rounded-full shadow-md transform peer-checked:translate-x-5 transition-transform duration-300 ease-in-out"></div>
