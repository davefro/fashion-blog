    {# Heading anchor JS #}
    <script type="module" defer>{% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}</script>
    <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js"></script>

    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const slideMenu = document.getElementById('slide-menu');
      const iconHamburger = document.getElementById('icon-hamburger');
      const iconClose = document.getElementById('icon-close');

      menuToggle.addEventListener('click', () => {
        slideMenu.classList.toggle('translate-x-full');

        // Toggle icons
        iconHamburger.classList.toggle('hidden');
        iconClose.classList.toggle('hidden');
      });

      document.addEventListener('DOMContentLoaded', () => {
        const toggle = document.getElementById('themeToggle');
        const toggleMobile = document.getElementById('themeToggleMobile');
        const root = document.documentElement;

        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark = savedTheme === 'dark' || (!savedTheme && prefersDark);


        root.classList.toggle('dark', isDark);
        if (toggle) toggle.checked = isDark;
        if (toggleMobile) toggleMobile.checked = isDark;

        function handleThemeChange(checked) {
          root.classList.toggle('dark', checked);
          localStorage.setItem('theme', checked ? 'dark' : 'light');
          if (toggle) toggle.checked = checked;
          if (toggleMobile) toggleMobile.checked = checked;
        }

        if (toggle) {
          toggle.addEventListener('change', () => handleThemeChange(toggle.checked));
        }
        if (toggleMobile) {
          toggleMobile.addEventListener('change', () => handleThemeChange(toggleMobile.checked));
        }
      });

      window.addEventListener("load", function () {
        window.cookieconsent.initialise({
          palette: {
            popup: {
              background: "#000",
              text: "#fff"
            },
            button: {
              background: "#f1d600",
              text: "#000"
            }
          },
          theme: "classic",
          position: "bottom", 
          type: "opt-in",     
          revokable: false,
          dismissOnScroll: false,
          dismissOnTimeout: false,
          content: {
            message: "We use cookies to enhance your browsing experience and analyze our traffic.",
            dismiss: "Reject",
            allow: "Accept",
            link: "Learn more",
            href: "/cookie-policy"
          },
          onInitialise: function (status) {
            if (this.hasConsented()) {
              // 👉 Load your Google Analytics or other scripts here
            }
          },
          onStatusChange: function (status, chosenBefore) {
            if (this.hasConsented()) {
              // 👉 Load your scripts if accepted
            } else {
              // 👉 Optional: Disable tracking cookies if rejected
            }
          }
        });
      });

    </script>



