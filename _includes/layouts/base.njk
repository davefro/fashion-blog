<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
  <!-- Meta  -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">

  <!-- SEO -->
  <link rel="canonical" href="{{ metadata.url }}">
  <link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="icon" href="/favicon.ico">
  <link rel="manifest" href="/site.webmanifest">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or metadata.title }}">
  <meta property="og:description" content="{{ description or metadata.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ metadata.url }}">
  <meta property="og:image" content="{{ metadata.image or '/img/default-og.jpg' }}">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or metadata.title }}">
  <meta name="twitter:description" content="{{ description or metadata.description }}">
  <meta name="twitter:image" content="{{ metadata.image or '/img/default-og.jpg' }}">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poetsen+One&family=Poiret+One&family=Pompiere&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />

  <!-- CSS -->
  <link rel="stylesheet" href="/css/tailwind.css">
  <style>{% include "css/index.css" %}</style>


  </head>



    {# <body class="bg-lightest text-dark font-sans"> #}
    <body class="bg-lightest text-gray-900 dark:bg-gray-900 dark:text-white">


    <!-- ✅ Header & Navigation -->
