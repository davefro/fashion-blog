<ol class="postlist">
  {% for post in postslist %}
    <li class="postlist-item">
      <article>
        <h2>
          <a href="{{ post.url }}" class="postlist-link">
            {{ post.data.title or "Untitled post" }}
          </a>
        </h2>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate("dd LLLL yyyy") }}
        </time>
        {% if post.data.description %}
          <p class="postlist-description">{{ post.data.description }}</p>
        {% endif %}
      </article>
    </li>
  {% endfor %}
</ol>

